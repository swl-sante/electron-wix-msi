<!-- CUSTOM Fonts -->
<TextStyle Id="Font_Title" FaceName="Tahoma" Size="14" Bold="yes" />
<TextStyle Id="Font_Label" FaceName="Tahoma" Size="7" Bold="yes" />

<DialogRef Id="ProgressDlg" />


<!-- CUSTOM DIALOG -->
<!-- Options dialogue : installation multi-user ? -->
<Dialog Id="OptionsDlg" Width="370" Height="270" Title="!(loc.InstallDirDlg_Title)">
	<!-- Image, Titre et bouton suivant, précédent et annuler -->
	<Control Id="Bitmap" Type="Bitmap" X="80" Y="10" Width="190" Height="70" TabSkip="no" Text="LogoSara" />

	<Control Id="Title" Type="Text" Text="{\Font_Title}Options générales" X="5" Y="90" Width="200" Height="30" />

	<Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
		<!-- <Publish Property="WixUI_InstallMode" Value="Update">Installed AND PATCH</Publish> -->
		<Publish Event="DoAction" Value="ChangePrefEnvVar">1</Publish>
	</Control>



  <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
		<Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
	</Control>
	<Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />

	<Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

	<!-- Checkbox pour choisir le mode d'installation (pour un utilisateur ou pour tous les utilisateurs) -->
	<Control Id="DesktopShortcutCheckBox" Type="CheckBox" X="10" Y="160" Width="200" Height="20" Property="ALLUSERS" Text="Installer pour tous les utilisateurs" CheckBoxValue="1">
		<Publish Event="DoAction" Value="SetDefaultPathFromCheckbox">1</Publish>
	</Control>


  <!--<Control Id="CGU" Type="Hyperlink" X="10" Y="130" Width="200" Height="20">
    <Text><![CDATA[<a href="https://www.sante-ra.fr/AutoConnectSSO/Content/StaticPages/charte-ra.html">Condition générales d'utilisations</a>]]></Text>
  </Control>-->


</Dialog>

<Dialog Id="PathOptionDlg" Width="370" Height="270" Title="!(loc.InstallDirDlg_Title)">

	<!-- Image, Titre et bouton suivant, précédent et annuler -->
	<Control Id="Bitmap" Type="Bitmap" X="80" Y="10" Width="190" Height="70" TabSkip="no" Text="LogoSara" />

	<Control Id="Title" Type="Text" Text="{\Font_Title}Chemin d'installation / préférences" X="5" Y="90" Width="300" Height="30" />

	<Control Id="Install" Type="PushButton" ElevationShield="yes" X="236" Y="243" Width="56" Height="17" Default="yes" Text="Installer">
		<!--<Publish Property="WixUI_InstallMode" Value="Update">Installed AND PATCH</Publish>-->
		<Condition Action="show">NOT Installed AND ALLUSERS</Condition>
		<Condition Action="enable">NOT Installed</Condition>
		<Condition Action="default">NOT Installed</Condition>
		<Publish Event="EndDialog" Value="Return">1</Publish>
		<Publish Event="DoAction" Value="ChangePrefEnvVar">1</Publish>
	</Control>

	<Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
		<Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
	</Control>

	<Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)"/>

	<Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />


	<!-- Chemin des préferences de l'application -->
	<Control Id="PrefPathLabel" Type="Text" Text="{\Font_Label}Chemin des préférences" X="10" Y="150" Width="100" Height="10" />
	<Control Id="PrefPathInput" Type="Edit" Text="Chemin des préférence" X="20" Y="165" Width="300" Height="20" Property="PrefPath"/>

	<!-- Chemin des préferences d'installation de l'application -->
	<Control Id="InstallPathLabel" Type="Text" Text="{\Font_Label}Chemin d'installation" X="10" Y="190" Width="200" Height="10" />
	<Control Id="InstallPathInput" Type="Edit" Text="Chemin d'installation" X="20" Y="205" Width="300" Height="20" Property="APPLICATIONROOTDIRECTORY"/>

</Dialog>


<!-- Paramètrage des boutons Suivant et précédent -->
<Publish Dialog="OptionsDlg" Control="Back" Event="SpawnDialog" Value="CancelDlg">1</Publish>
<Publish Dialog="OptionsDlg" Control="Next" Event="NewDialog" Value="PathOptionDlg">1</Publish>

<Publish Dialog="PathOptionDlg" Control="Back" Event="NewDialog" Value="OptionsDlg">1</Publish>
